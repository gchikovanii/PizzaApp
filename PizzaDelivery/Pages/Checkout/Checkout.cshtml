@page
@model PizzaDelivery.Pages.CheckOut.CheckOutModel
@{
}

<h1>Your Order!</h1>
@{
    var imagePath = "~/images/Pizzas/" + (@Model.ImageTitle + ".png");
}
<div class="align-content-center">
    <div class="col-3 mx-auto mb-5">
        <img src=@imagePath class="w-100" asp-append-version ="true"/>
        <p>You Order for @Model.ImageTitle is ready!</p>
        <p>Total price is: @Model.PizzaPrice Lari </p>
        <br/>
        <a class="btn btn-primary mt-1 mx-auto" asp-area="" asp-page="Thanks">Confirm Order!</a>
    </div>
</div>